{% include grid.template('list.single_actions') with {'grid': grid, 'routes': routes, 'page': page, 'sort': sort, 'sort_type': sort_type} %}
<form action="{{ path(routes.index, {'page': page, 'sort': sort, 'sort_type' : sort_type }) }}" name="filterable-form"
      method="get" class="filterable">
    <table class="table table-striped table-condensed table-bordered propel-admin">
        {% include grid.template('list.table_header') with {'columns': columns, 'routes': routes, 'page': page, 'sort': sort, 'sort_type': sort_type, 'options': options} %}
        {% include grid.template('list.table_filters') with {'columns': columns, 'routes': routes, 'page': page, 'sort': sort, 'sort_type': sort_type, 'options': options, 'filter_raw': filter_raw} %}
        {% for item in collection %}
            {% include grid.template('row') with { 'item': item, 'columns': columns, 'actions': actions, 'page': page, 'grid': grid, 'options': options } %}
        {% endfor %}

    </table>
</form>

